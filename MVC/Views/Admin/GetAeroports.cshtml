@model IEnumerable<MVC.Models.AeroportDto>

@{
    ViewData["Title"] = "GetAeroports";
}

<style>
    table {
        font-size: 12px;
    }
</style>

<div class="container">
    <div class="row mb-2">
        <div class="col-2">
            <h2>Aeroports</h2>
        </div>
        <div class="col mt-2">
             <a asp-action="PostAeroport" class="btn btn-success btn-sm me-2"><i class="bi bi-plus-circle me-2"></i> Add</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-backspace me-2"></i> Back</a>
        </div>
    </div>


    <table class="table table-sm table-hover">
        <thead class="table-dark">
            <tr>
                <th style="width: 3%">Id</th>
                <th style="width: 15%">Name</th>
                <th style="width: 20%">Address</th>
                <th style="width: 17%">Email</th>
                <th style="width: 15%">Phone</th>
                <th style="width: 30%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AeroportId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name) </td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email) </td>
                    <td> @Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>
                        <a asp-action="EditAeroport" asp-route-Id="@item.AeroportId" class="btn btn-warning btn-sm me-2 mb-1"><i class="bi bi-pen me-1"></i> Edit</a>
                        <a asp-action="DeleteAeroport" asp-route-Id="@item.AeroportId" class="btn btn-danger btn-sm me-2 mb-1"><i class="bi bi-trash me-1"></i> Delete</a>
                        <a asp-action="GetCars" asp-controller="Car" asp-route-Id="@item.AeroportId" class="btn btn-primary btn-sm me-2 mb-1"><i class="bi bi-car-front-fill me-1"></i> Cars</a>
                        <a asp-action="GetPrices" asp-route-Id="@item.AeroportId" class="btn btn-info btn-sm mb-1"><i class="bi bi-currency-dollar me-1"></i> Prices</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

