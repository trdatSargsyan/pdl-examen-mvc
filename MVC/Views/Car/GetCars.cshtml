@model IEnumerable<MVC.Models.CarDto>

@{
    ViewData["Title"] = "GetCars";
}


<style>
    th{
        font-size: 14px;
    }

</style>
<div class="container">
    <div class="row mb-2">
        <div class="col-1">
            <h2>Cars</h2>
        </div>
        <div class="col mt-2 ms-2">
            <a asp-action="PostCar" class="btn btn-primary btn-sm"><i class="bi bi-car-front me-1"></i> Add Car</a>
            <a href='javascript:history.go(-1)' class="btn btn-secondary btn-sm"><i class="bi bi-backspace me-1"></i> Back</a>
        </div>
    </div>

    <table class="table table-sm table-hover">
        <thead class="table-dark">
            <tr>
                <th style="width: 2%">Id</th>
                <th style="width: 10%">Brand</th>
                <th style="width: 6%">Model</th>
                <th style="width: 13%">Production Date</th>
                <th style="width: 7%">Km</th>
                <th style="width: 8%">Motor</th>
                <th style="width: 20%">Gearbox </th>
                <th style="width: 6%">Type</th>
                <th style="width: 2%">Seater</th>
                <th style="width: 36%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => i.Id)</td>
                    <td>@Html.DisplayFor(modelItem => i.Brand) </td>
                    <td>@Html.DisplayFor(modelItem => i.Model) </td>
                    <td>@Html.DisplayFor(modelItem => i.ProductionDate) </td>
                    <td>@Html.DisplayFor(modelItem => i.Km) </td>
                    <td>@Html.DisplayFor(modelItem => i.MotorDto.Type) </td>
                    <td>@Html.DisplayFor(modelItem => i.GearboxDto.Type) </td>
                    <td>@Html.DisplayFor(modelItem => i.TypeOfCarDto.Type) </td>
                    <td>@Html.DisplayFor(modelItem => i.Seater)</td>
                    <td>
                        <a asp-action="GetReservations" asp-route-Id="@i.Id" class="btn btn-info btn-sm me-2 mb-1"><i class="bi bi-book-half me-1"></i> Reservations</a>
                        <a asp-action="EditCar" asp-route-Id="@i.Id" class="btn btn-warning btn-sm me-2 mb-1"><i class="bi bi-pen me-1"></i> Edit</a>
                        <a asp-action="DeleteCar" asp-route-Id="@i.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash ms-3 me-3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

